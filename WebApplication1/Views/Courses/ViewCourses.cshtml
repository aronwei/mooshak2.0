@model IEnumerable<WebApplication1.Models.ViewModels.CourseViewModel>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "View Courses";
}

<h3>Hi  @User.Identity.GetUserName() looking sharp today</h3>

<h4>Courses</h4>
<p>
    @Html.ActionLink("Create New", "AddCourse")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>




    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCourse", new { id=item.ID }) |
            @Html.ActionLink("Details", "ViewCourseDetails", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteCourse", new { id=item.ID })
        </td>
    </tr>
}





</table>
